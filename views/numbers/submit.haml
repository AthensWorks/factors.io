%form.form-horizontal{id: "submit-number-form", action: "/factors/#{number.value}"}
  %fieldset
    %legend Submit a Number
    .form-group
      %label.col-lg-2.control-label{for: "numberValue"} Number
      .col-lg-10
        %input#numberValue.form-control{value: number.value, disabled: true}
    .form-group
      %label.col-lg-2.control-label{for: "email"} Email
      .col-lg-10
        %input#email.form-control{autocomplete: "off", placeholder: "factors@factors.io", style: "cursor: pointer; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;", type: "text"}/
    .form-group
      %label.col-lg-2.control-label Email Me When It's Complete
      .col-lg-10
        .radio
          %label
            %input#emailMeYes{checked: "checked", name: "emailMeYes", type: "radio", value: "emailMeYes"}/
            Yes
        .radio
          %label
            %input#emailMeNo{name: "emailMeNo", type: "radio", value: "emailMeNo"}/
            No
    .form-group
      .col-lg-10.col-lg-offset-2
        %button.btn.btn-default Cancel
        %button.btn.btn-primary{type: "submit"} Submit